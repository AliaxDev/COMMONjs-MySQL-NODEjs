<div class="container p-4 h-100">
  <div class="row h-75 d-flex align-items-center">
    <div class="col-md-4 mx-auto">
      <div class="card bg-dark">
        <form action="/contract/add" method="POST" class="card-body card-block">

          {{! Title and save button }}
          <div class="d-flex align-items-center justify-content-center mb-3">
            <h1 class="text-light mb-3 h4">Add new Contract</h1>
          </div>
          <label for="title">Write a title:</label>
          <input type="text" name="title" class="form-control bg-dark text-light mb-2" placeholder="Supplier"
            autofocus />

          <label for="url">No. Contract: </label>
          <input type="text" name="contract" class="form-control bg-dark text-light mb-2" placeholder="No.Contract" />

          <label for="description">Write a description:</label>
          <textarea name="description" rows="2" class="form-control bg-dark text-light mb-2"
            placeholder="Description"></textarea>

          <div class="row h-75 d-flex align-items-center p-2">
              <button class="btn btn-primary btn-block">SAVE</button>
          </div>
          
        </form>
      </div>
    </div>

  </div>
</div>