<div class="container p-4">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <div class="card bg-dark border border-dark">
        <div class="card-body">
          <form action="/links/edit/{{contracts.id}}" method="POST">
            <div class="form-group">
              <input
                type="text"
                name="title"
                class="form-control bg-dark text-light"
                placeholder="Title"
                value="{{contracts.title}}"
                autofocus
              />
            </div>
            <div class="form-group">
              <input
                type="text"
                name="contract"
                class="form-control bg-dark text-light"
                placeholder="contract"
                value="{{contracts.url}}"
              />
            </div>
            <div class="form-group">
              <textarea
                name="description"
                rows="2"
                class="form-control bg-dark text-light"
                placeholder="Description"
              >{{contracts.description}}</textarea>
            </div>
            <div class="form-group">
              <button class="btn btn-success btn-block">
                Save
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>